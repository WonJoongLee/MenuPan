<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/red2</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/CBNURed</item>
    </style>
    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="AutoComplete">
        <item name="colorControlNormal">@color/darkRed</item>
        <item name="colorControlActivated">@color/darkRed</item>
    </style>

    <style name="Switch">
        <item name="colorControlNormal">@color/red</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/red2</item>
    </style>
</resources>